<h1>Writer Overflow</h1>


<% if @errors %>
  <% @errors.each do |error| %>
  <p><%= error  %></p>
  <% end %>
<% end %>

<ul>
  <li><%= form_for @user do |f| %>
  <li><%=f.text_field :username, :placeholder => "Username"%></li>
  <li><%=f.text_field :email, :placeholder => "email"%></li>
  <li><%=f.password_field :password, :class=> "input2", :placeholder => "Password"%></li>
  <li><%=f.password_field :password_confirmation, :placeholder => "Confirm Password"%></li>
</ul>

<%= f.submit "Sign Up"%>
<% end%>